<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/profilepicturecard"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:elevation="6dp"
        app:cardCornerRadius="100dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/profilepicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profilepicturecard">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="#5b5a5f"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMessage1"
        android:layout_toEndOf="@+id/profilepicturecard"
        android:gravity="end"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
