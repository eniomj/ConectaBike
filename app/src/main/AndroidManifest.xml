<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConectaBike"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.conectabike.UserProfile"
            android:exported="false" />
        <activity
            android:name="com.conectabike.Education"
            android:exported="false" />
        <activity
            android:name="com.conectabike.Rota"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name="com.conectabike.CriarRota"
            android:exported="false"
            android:theme="@style/Theme.ConectaBike" />
        <activity
            android:name="com.conectabike.Cadastro"
            android:exported="false" />
        <activity
            android:name="com.conectabike.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.conectabike.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.conectabike.HomeFragment"
            android:exported="true"
            tools:ignore="Instantiatable" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>